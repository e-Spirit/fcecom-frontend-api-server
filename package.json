{
  "name": "fcecom-frontend-api-server",
  "version": "0.22.0",
  "description": "FirstSpirit Connect for Commerce - Frontend API Server",
  "main": "dist/main.cjs",
  "module": "dist/main.esm",
  "types": "dist/main.types",
  "scripts": {
    "clean": "rimraf dist",
    "ci": "npm ci",
    "build:watch": "tsc --module commonjs --project tsconfig.build.json && concurrently \"tsc --module commonjs --project tsconfig.build.json --watch\" \"npx rollup -c rollup.config.ts --watch\"",
    "build": "tsc --module commonjs --project tsconfig.build.json && npx rollup -c rollup.config.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --config .prettierrc --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint",
    "test": "jest --silent",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "pack": "npm run build && npm pack",
    "typedoc": "npx typedoc",
    "typedoc:watch": "npx typedoc --watch"
  },
  "jest-junit": {
    "outputName": "../../test-reports/server.xml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/e-Spirit/fcecom-frontend-api-server"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "author": "Crownpeak Technology GmbH",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.1.2",
    "fsxa-api": "^10.16.0",
    "joi": "^17.7.0",
    "lodash.get": "^4.3.2",
    "lodash.set": "^4.3.2",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.4",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.set": "^4.3.7",
    "@types/node": "^18.11.17",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "express": "^4.18.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^4.0.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^15.0.0",
    "jest-mock-extended": "^3.0.1",
    "js-doc": "^0.5.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.4.5",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "automock": false,
    "restoreMocks": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "resetMocks": false,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
}
